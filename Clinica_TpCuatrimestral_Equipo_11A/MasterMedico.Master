            <div class="bg-light border-end vh-100 p-3 shadow-sm" style="width: 250px;">
                <div class="text-center mb-4">
                    <img src="<%= ResolveUrl("~/Imagenes/Perfil_Placeholder.png") %>" class="rounded-circle mb-2" style="width: 90px; height: 90px;" />
                    <h6 class="fw-bold mb-0">Dr. Juan Pérez</h6>
                    <small class="text-muted d-block">Cardiólogo</small>
                    <small class="text-muted d-block">Matrícula: MN 12345</small>
                </div>

                <ul class="nav flex-column">
                    <li class="nav-item mb-2">
                        <a class="nav-link fw-semibold text-dark" href="InicioMedico.aspx">
                            <i class="bi bi-speedometer2 me-2"></i>Inicio
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link fw-semibold text-dark" href="AgendaMedico.aspx">
                            <i class="bi bi-calendar-event me-2"></i>Agenda
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link fw-semibold text-dark" href="#">
